<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>v4Guard Checkpoint's Demonstration</title>
    <link rel="stylesheet" href="/assets/css/main.css">

    <script src="https://challenges.v4guard.io/checkpoint/v1/api.js" async defer></script>
</head>

<body class="bg-gray-200" style="min-height: 100vh;display: flex;align-items: center;">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <form action="/login" method="POST" id="checkpoint-area" class="w-80 w-lg-30 h-auto">
                <% if (error) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
                <% } %>

                <% if (success) { %>
                <div class="alert alert-success">
                    <%= success %>
                </div>
                <% } %>

                <h4>Sensitive Area</h4>
                <label class="form-label mt-3">Email Address</label>
                <input class="form-control form-control-sm" placeholder="hello@v4guard.io" type="email" required name="email">
                <label class="form-label mt-3">Password</label>
                <input class="form-control form-control-sm" placeholder="••••••••••••" type="password" required name="password">
                <div class="v4guard-checkpoint mt-3" data-sitekey="<%= site_key %>" data-callback="javascriptCallback"></div>
                <button disabled class="btn btn-primary btn-sm mt-3 w-100">Log in</button>
            </form>
        </div>
    </div>

    <script>
        window.history.replaceState({}, document.title, "/");
        function javascriptCallback(token) {
            document.querySelector('#checkpoint-area button').disabled = false;
        }
    </script>
</body>

</html>